{
    "name": "yajima-tatsuro/jp-address-splitter",
    "description": "日本の住所文字列を都道府県、市区町村、それ以降に分割するPHPパッケージ",
    "type": "library",
    "license": "MIT",
    "keywords": ["japan", "address", "splitter", "prefecture", "city", "php"],
    "homepage": "https://github.com/Tatsurou-Yajima/jp-address-splitter",
    "support": {
        "issues": "https://github.com/Tatsurou-Yajima/jp-address-splitter/issues",
        "source": "https://github.com/Tatsurou-Yajima/jp-address-splitter"
    },
    "authors": [
        {
            "name": "yajima-tatsuro",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.75",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "YajimaTatsuro\\JpAddressSplitter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YajimaTatsuro\\JpAddressSplitter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    }
}
